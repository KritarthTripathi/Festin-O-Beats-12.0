<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Dlayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA500"
    tools:context="com.abesit.amritotsavabesit.Techselect">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />

    <ScrollView
        android:id="@+id/Sview"
        android:layout_width="match_parent"
        android:background="@drawable/b2"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cL1"
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/menu"
                app:title="Technical Events"
                app:titleTextColor="#E91E63" />

            <Button
                android:id="@+id/event1tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="Programming (CodeJam)"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />


            <Button
                android:id="@+id/event2tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="Ex-Quiz Me"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event1tech" />

            <Button
                android:id="@+id/event3tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="Line Follower"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event2tech" />

            <Button
                android:id="@+id/event4tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="Robo War"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event3tech" />

            <Button
                android:id="@+id/event5tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="Robo Race"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event4tech" />

            <Button
                android:id="@+id/event6tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="E-Go Green"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event5tech" />

            <Button
                android:id="@+id/event7tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="Technical Poster Making"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event6tech" />

            <Button
                android:id="@+id/event8tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="Gliders (Glide-It)"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event7tech" />

            <Button
                android:id="@+id/event9tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="Bridge The Gap"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event8tech" />

            <Button
                android:id="@+id/event10tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="Web Designing (WebIt)"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event9tech" />

            <Button
                android:id="@+id/event11tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/techbuttons"
                android:text="Carribean Hunt"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event10tech" />

            <Button
                android:id="@+id/event12tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/cultbuttons"
                android:text="Frugal Engineering (Jugad)"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event11tech" />

            <Button
                android:id="@+id/event13tech"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/cultbuttons"
                android:text="Working Model Exhibition"
                android:textColor="#1F1B1B"
                android:textSize="20sp"
                app:cornerRadius="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event12tech" />

            <LinearLayout
                android:id="@+id/tech_cordi_names"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event13tech">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cord_1_tech"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#0000">


                    <TextView
                        android:id="@+id/info1_tech1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:fontFamily="@font/baloo"
                        android:gravity="center_horizontal|top|center_vertical"
                        android:text="Abhishek Kumar"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/contact_tech1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/baloo"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="+91 88851161189"
                        android:textIsSelectable="true"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/info1_tech1" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cord_2_tech"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#0000">


                    <TextView
                        android:id="@+id/info1_tech2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:fontFamily="@font/baloo"
                        android:gravity="center_horizontal|top|center_vertical"
                        android:text="Anshul Tripathi"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/contact_tech2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/baloo"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="+91 7417124284"
                        android:textIsSelectable="true"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintTop_toBottomOf="@id/info1_tech1" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>